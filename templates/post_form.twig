{% extends "base.twig" %}

{%if args.id is not empty %}
  {% set label = 'Update entry' %}
  {% set path = path_for('post-detail', { 'id': args.id }) %}
{% else %}
  {% set label = 'Publish new entry' %}
  {% set path = path_for('posts-list') %}
{% endif %}

{% block title %}
{{ label }}
{% endblock %}

{% block content %}
  <section>
      <div class="container">
          <div class="new-entry">
              <h2>{{ label }}</h2>
              {% if message.content is not empty %}
                <p class="message {{ message.type }}">{{ message.content }}</p>
              {% endif %}
              <form method="post">
                  <label for="title"> Title</label>
                  <input type="text" name="title" value="{{ args.title }}"><br>
                  <label for="entry">Entry</label>
                  <textarea rows="5" name="body">{{ args.body }}</textarea>
                  <input type="submit" value="{{ label }}" class="button">


                  <a href="{{ path }}" class="button button-secondary">Cancel</a>


                  {% for key, value in csrf %}
                      <input type="hidden" name="{{ key }}" value="{{ value }}">
                  {% endfor %}

                  {%if args.id is not empty %}
                    <input type="hidden" name="id" value="{{ args.id }}">
                  {% endif %}

              </form>
          </div>
      </div>
  </section>
{% endblock %}
