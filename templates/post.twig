<article>
    <h2><a href="{{ path_for('post-detail', { 'slug': post.slug }) }}">{{ post.title|raw }}</a></h2>
    <time datetime="{{ post.date }}">{{ post.date|date("F j, Y | H:i:s") }}</a></time>
    {% if post.tags is not empty %}
      <p class="tags">
      {% for tag in post.tags %}
          <a href="{{ path_for('posts-list', { 'tag': tag.name }) }}">#{{ tag.name }}</a>
      {% endfor %}
      </p>
    {% endif %}
</article>
